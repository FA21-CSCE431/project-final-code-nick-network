        Your name: <%= form.label :name, current_user.full_name %><%= form.hidden_field :name, value: current_user.full_name %>
        <p><em><%= form.label :description %><br><%= form.text_area :description, :rows => 10 %></em></p>
      </center></div>
    </div>
  </div>

  <center>
    <div class="actions">
      <%= form.submit %>
    </div>
  </center>
<% end %>
