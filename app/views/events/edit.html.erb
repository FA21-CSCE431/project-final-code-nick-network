<% if current_user.uid == "110391296899575374577" %>
  <h1>Editing Event</h1>

  <%= render 'form', event: @event %>

  <div class="container", style="margin-left: 12em;">
    <%= link_to '<button type="button"> View </button>'.html_safe, @event %>
    <%= link_to '<button type="button"> Back </button>'.html_safe, events_path %>
  </div>
<% else %>
  <center>
  <h1>You're not an admin!</h1>
  <%= link_to 'Back', events_path %>
  </center>
<% end %>
