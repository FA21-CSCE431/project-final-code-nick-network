<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <style>
    /** {
      font-family: "Comic Sans MS", "Comic Sans", cursive;
    }*/

    .card {
      box-shadow: 0 0px 20px 0 rgba(0, 0, 0, 0.2);
      border-radius: 2em;
      text-align: center;
      box-shadow: 0 5px 10px rgba(0,0,0,.2);
    }

    .list-group-flush .list-group-item {
      font-size: 15px;
    }

    .css_img {
      border-radius: 2em 2em 0em 0em;
    }
    .container {
    width: 65em;
    margin: 0 auto;
    }

 </style>
</head>

<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= link_to '<button type="button">New Event</button>'.html_safe, new_event_path %>

<br>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-6">
  <% @events.each do |event| %>
      <div class="col" style="width: 30rem; ">
        <div class="card text-black bg-light h-100">
          <%= image_tag("/assets/bike.jpg", class: "css_img") %>
          <div class="card-body">
            <h5 class="card-title", style="font-size:19px;"> <%= event.title %> </h5>
            <p class="card-text">DESCRIPTION</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">DATE-TIME</li>
            <li class="list-group-item">LOCATION</li>
            <li class="list-group-item">ADDITIONAL REQ.</li>
          </ul>
          <div class="card-body">
            <%= link_to 'Show', event, :class => "btn: btn btn-outline-dark" %>
            <%= link_to 'Edit', edit_event_path(event), :class => "btn: btn btn-outline-dark"%>
            <%= link_to 'Destroy', delete_event_path(event), :class => "btn: btn btn-outline-dark"%>
           </div>
          </div>
        </div>
  <% end %>
  </div>
</div>
