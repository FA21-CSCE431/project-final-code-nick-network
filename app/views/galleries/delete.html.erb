<head>
  <style>

    h1 {
      text-align: center;
    }

    .card {
      text-align: center;
    }

    .css_img {
      width: 100%;
    }

    .container {
      max-width: 65em;
      margin: 0 auto;
    }

    .button-container {
      margin-left: auto;
      margin-right: auto;
      justify-content: center;
      width: 8em;
    }

    .del-event {
      text-align: center;
    }

  </style>
</head>

<% if current_user.uid == "110391296899575374577" %>
  <p id="notice"><%= notice %></p>

  <h1> Deleting <%= @gallery.title %> </h1>

  <div class="del-event">
    <%= form_for(@gallery, :method => 'delete') do |f| %>

      <%= image_tag(@gallery.photo, width: 1000) if @gallery.photo.attached? %>


      <p>Are you sure you want to permanently delete this image?</p>
      <p><%= @gallery.title %></p>

      <div class="form-buttons">
        <%= f.submit("Delete Event") %>
        <%= link_to '<button type="button"> Back </button>'.html_safe, galleries_path %>
      </div>

    <% end %>
    <br>
    <br>
  </div>

<% else %>
  <center>
  <h1>You're not an admin!</h1>
  <%= link_to 'Back', galleries_path %>
  </center>
<% end %>
