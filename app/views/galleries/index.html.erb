<p id="notice"><%= notice %></p>

<head>
  <style>
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }

  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }

  .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  }

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }

  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
  </style>
</head>
<center>
  <h1>Gallery</h1>

  <div class="button-container">
    <% if current_user.uid == "110391296899575374577" %>
      <%= link_to '<button type="button">Add New Image</button>'.html_safe, new_gallery_path %>
    <% end %>
  </div>

  <div class="row">
    <% @galleries.each do |gallery| %>
      <div class="column">

        <% if gallery.photo.attached? %>
          <%= image_tag(gallery.photo, width: 1000) %>
        <% else %>
          <%= image_tag("https://nick-network.s3.us-east-2.amazonaws.com/Default.jpg", class: "css_img") %>
        <% end %>
        <td><%= link_to 'Show', gallery %></td>
        <% if current_user.uid == "110391296899575374577" %>
          <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Destroy', delete_gallery_path(gallery) %></td>
        <% end %>
      </div>
    <% end %>
  </div>
</center>
