<p id="notice"><%= notice %></p>

<head>
  <style>
  .row {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4px;
  }

  /* Create four equal columns that sits next to each other */
  .column {
    flex: 25%;
    max-width: 25%;
    padding: 0 4px;
  }

  .column img {
    margin-top: 8px;
    vertical-align: middle;
    width: 100%;
  }

  /* Responsive layout - makes a two column-layout instead of four columns */
  @media screen and (max-width: 800px) {
    .column {
      flex: 50%;
      max-width: 50%;
    }
  }

  /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
  @media screen and (max-width: 600px) {
    .column {
      flex: 100%;
      max-width: 100%;
    }
  }
  </style>
</head>

<div class="button-container">
  <%= link_to '<button type="button">Add New Image</button>'.html_safe, new_gallery_path %>
</div>

<div class="row">
  <% @galleries.each do |gallery| %>
    <div class="column">
      <%= image_tag(gallery.photo, width: 1000) if gallery.photo.attached? %>
      <td><%= link_to 'Show', gallery %></td>
      <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
      <td><%= link_to 'Destroy', delete_gallery_path(gallery) %></td>
    </div>
  <% end %>
</div>