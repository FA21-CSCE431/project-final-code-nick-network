<p id="notice"><%= notice %></p>

<h1>News Feed</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


  <center>
    <h2>
        <%= link_to 'New Post', new_news_post_path %>
    </h2>
  </center>

  <tbody>
    <% @news_post.each do |news_post| %>
      <tr>
        <div class="mx-auto" style="width: 300px; margin-left: auto; margin-right: auto;">
          <div class="card" style="width: 300px; border: 3px solid black; margin-left: auto; margin-right: auto;">
            <div class="card-body"><center>
              <h3 class="card-title"><strong><%= news_post.title %></strong></h3>
              <p class="card-text"><em><%= news_post.description %></em></p>

              <button type="button" class="btn btn-light"><%= link_to 'Show', news_post %></button>
              <button type="button" class="btn btn-light"><%= link_to 'Edit', edit_news_post_path(news_post) %></button>
              <button type="button" class="btn btn-light"><%= link_to 'Back', news_posts_path %></button>
            </center></div>
          </div>
        </div>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>

<br>
